<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".decFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        app:cardCornerRadius="20dp"
        android:layout_height="667dp"
        android:layout_gravity="center"
        android:paddingBottom="30dp">
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="300dp"
            android:background="@drawable/detailcom"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView3"
                android:layout_width="254dp"
                android:layout_height="200dp"
                android:layout_marginLeft="25dp"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:text="TextView"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/design_default_color_secondary"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/twitter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="110dp"
                    android:src="@drawable/_23" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/face"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/facebook_logo" />
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/rectangle_2"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Official Info"
                    android:textSize="20dp"
                    android:textColor="@color/orange"
                    android:textStyle="bold">

                </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:layout_marginTop="15dp"
                        android:paddingBottom="10dp"
                        android:text="Official Mail"
                        android:textSize="20dp"
                        android:textColor="@color/green" />

                    <TextView
                        android:id="@+id/textView7"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="20dp"
                        android:text="Ward Representing"
                        android:textColor="@color/green" />

                    <TextView
                        android:id="@+id/textView6"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_height="wrap_content"
                        android:text="Political Party"
                        android:textColor="@color/green"
                        android:textSize="20dp">

                    </TextView>
                    <TextView
                        android:id="@+id/party"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_height="wrap_content"
                        android:text="Office Address"
                        android:textColor="@color/green"
                        android:textSize="20dp">

                    </TextView>
                    <TextView
                        android:id="@+id/office"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_4"
                    android:orientation="vertical">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Basic Info"
                        android:textStyle="bold"
                        android:textColor="@color/orange"
                        android:textSize="25dp">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_height="wrap_content"
                        android:text="Date of Birth"
                        android:textColor="@color/green"
                        android:textSize="20dp">

                    </TextView>
                    <TextView
                        android:id="@+id/date"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_height="wrap_content"
                        android:text="Hometown"
                        android:textColor="@color/green"
                        android:textSize="20dp">

                    </TextView>
                    <TextView
                        android:id="@+id/Home"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_height="wrap_content"
                        android:text="Marrital status"
                        android:textColor="@color/green"
                        android:textSize="20dp">

                    </TextView>
                    <TextView
                        android:id="@+id/marriage"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_height="wrap_content"
                        android:text="Religion"
                        android:textColor="@color/green"
                        android:textSize="20dp">

                    </TextView>
                    <TextView
                        android:id="@+id/Religion"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView">

                    </TextView>




                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</FrameLayout>